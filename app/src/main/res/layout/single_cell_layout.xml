<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/singlecellw"
    android:orientation="vertical"
    android:padding="@dimen/paddingsinclecell">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendar_day"
        android:text="@string/calendarday"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="@dimen/textsizesinglec"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/textsizesc"
        android:id="@+id/events_id"
        android:textColor="@color/white"
        android:layout_gravity="center"/>

</LinearLayout>